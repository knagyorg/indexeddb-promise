{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./types",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "lib": ["es2018", "dom", "esnext"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "types": [],
    "allowJs": true,
    "strict": false,
    "checkJs": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "build", "lib", "tests"]
}
